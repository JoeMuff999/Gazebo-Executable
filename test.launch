<launch>
    <arg default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]" name="model" />
    <arg default="tb3_0" name="1_tb3" />
    <arg default="0.0" name="1_tb3_x_pos" />
    <arg default="0.0" name="1_tb3_y_pos" />
    <arg default="0.0" name="1_tb3_z_pos" />
    <arg default="0.0" name="1_tb3_pitch" />
    <arg default="0.0" name="1_tb3_yaw" />
    <arg default="0.0" name="1_tb3_roll" />
    <arg default="tb3_1" name="2_tb3" />
    <arg default="0.0" name="2_tb3_x_pos" />
    <arg default="0.0" name="2_tb3_y_pos" />
    <arg default="0.0" name="2_tb3_z_pos" />
    <arg default="0.0" name="2_tb3_pitch" />
    <arg default="0.0" name="2_tb3_yaw" />
    <arg default="0.0" name="2_tb3_roll" />
    <arg default="tb3_2" name="3_tb3" />
    <arg default="0.0" name="3_tb3_x_pos" />
    <arg default="0.0" name="3_tb3_y_pos" />
    <arg default="0.0" name="3_tb3_z_pos" />
    <arg default="0.0" name="3_tb3_pitch" />
    <arg default="0.0" name="3_tb3_yaw" />
    <arg default="0.0" name="3_tb3_roll" />


    <group ns="$(arg 1_tb3)">
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" value="$(arg 1_tb3)" />
        </node>

        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 1_tb3) -x $(arg 1_tb3_x_pos) -y $(arg 1_tb3_y_pos) -z $(arg 1_tb3_z_pos) -Y $(arg 1_tb3_yaw) -param robot_description" />
    </group>

    <group ns="$(arg 2_tb3)">
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" value="$(arg 2_tb3)" />
        </node>

        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 2_tb3) -x $(arg 2_tb3_x_pos) -y $(arg 2_tb3_y_pos) -z $(arg 2_tb3_z_pos) -Y $(arg 2_tb3_yaw) -param robot_description" />
    </group>

    <group ns="$(arg 3_tb3)">
        <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

        <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
            <param name="publish_frequency" type="double" value="50.0" />
            <param name="tf_prefix" value="$(arg 3_tb3)" />
        </node>

        <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model $(arg 3_tb3) -x $(arg 3_tb3_x_pos) -y $(arg 3_tb3_y_pos) -z $(arg 3_tb3_z_pos) -Y $(arg 3_tb3_yaw) -param robot_description" />
    </group>

</launch>